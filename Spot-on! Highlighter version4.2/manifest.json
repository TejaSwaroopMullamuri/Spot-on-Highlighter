{
  "manifest_version": 3,
  "name": "Spot On! Highlighter",
  "version": "4.2",
  "description": "Highlights text on web pages when hovered. Control via extension popup.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Spot On! Highlighter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}